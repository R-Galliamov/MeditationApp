<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
        <item name = "android:gravity">center_horizontal</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="TitleSmallTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/old_silver</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SecondarySmallTextStyle">
        <item name="android:textColor">@color/old_silver</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimarySmallTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="PrimarySmallestTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="YellowTextStyle">
        <item name="android:textColor">@color/bright_yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="SettingsButtonStyle">
        <item name="android:textColor">@color/bright_yellow</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="SmallTextStyle">
        <item name="android:textColor">@color/old_silver</item>
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="GrayButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <!-- Add any other desired attributes -->
    </style>

    <style name="RadioButtonStyle" parent="@style/PrimaryTextStyle">
        <item name="android:button">@null</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:background">@drawable/rounded_ripple_button</item>
        <item name="android:drawableRight">@drawable/radio_button</item>
        <item name="android:layoutDirection">rtl</item>
    </style>

    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>

    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/blue</item>
        <item name="colorSecondary">@color/blue</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="RoundedEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/rounded_ripple_button</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">40</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColorHint">@color/old_silver</item>
    </style>

    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light" >
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:textSize">32dp</item>
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="TransparentDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>
